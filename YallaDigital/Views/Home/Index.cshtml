@{
    ViewData["Title"] = "Home";
    var isAuthenticated = User.Identity?.IsAuthenticated ?? false;
    var userName = User.Identity?.Name ?? "";
}

<div class="home-container">
    <h1 class="home-title">Welcome to <span class="highlight">Yalla Digital</span></h1>
    <p class="home-subtitle">Your trusted partner in digital marketing and innovation.</p>

    @if (isAuthenticated)
    {
        <div class="welcome-message">
            Hello, <strong>@userName</strong>! Glad to have you back 🎉
        </div>
        <a class="btn-action" asp-controller="Dashboard" asp-action="Index">Go to Dashboard</a>
    }
    else
    {
        <a class="btn-action" asp-controller="Account" asp-action="Register">Get Started</a>
    }
</div>