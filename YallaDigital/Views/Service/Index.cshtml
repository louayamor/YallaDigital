@model IEnumerable<YallaDigital.Models.Service>

@{
    ViewData["Title"] = "Our Services";
}

<h1 class="mb-4">Our Services</h1>

<div class="mb-3">
    <a asp-action="Create" class="btn btn-primary">+ Create New Service</a>
</div>

<div class="row">
    @foreach (var service in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card shadow h-100">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@service.Title</h5>
                    <p class="card-text text-muted">@service.Description</p>
                    <p class="card-text fw-bold mt-auto">Price: @service.Price.ToString("C")</p>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a asp-action="Details" asp-route-id="@service.Id" class="btn btn-sm btn-outline-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@service.Id" class="btn btn-sm btn-outline-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@service.Id" class="btn btn-sm btn-outline-danger">Delete</a>
                </div>
            </div>
        </div>
    }
</div>
